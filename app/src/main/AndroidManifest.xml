<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gui.gui">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".merriam.MerriamMainActivity" />

        <activity
            android:name=".merriam.MerriamDetailActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity android:name=".flight_status.FlightMainActivity" />

        <activity android:name=".news_feed.NFMainActivity" />

        <activity android:name=".ny_times.NYMainActivity" />

        <activity
            android:name=".news_feed.NFNewsDetailActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity android:name=".flight_status.FlightDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"/>

        <activity android:name=".ny_times.NYNewsDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"/>
    </application>

</manifest>